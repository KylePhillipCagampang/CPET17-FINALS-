<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CPETCAM</title>
  </head>
  <style>
    html,
    body {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      max-width: 100vw;
      overflow-x: hidden;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    button,
    input[type="submit"] {
      cursor: pointer;
    }

    .signin_div {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }
    .signin_form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      width: 100%;
    }
    .h1 {
      margin: 10px 0;
    }
    .input_text {
      height: 50px;
      width: 20%;
      min-width: 260px;
      max-width: 280px;
      border: 1px solid rgba(0, 0, 0, 0.349);
      border-radius: 5px;
      outline: none;
      padding: 5px;
      font-size: 1.125rem;
      transition: 200ms ease;
    }

    .forgotpass_div {
      display: flex;
      align-items: center;
      width: 20%;
      min-width: 260px;
      max-width: 280px;
    }
    .forgotpass_link {
      margin-left: auto;
      color: #152dff;
      font-size: 1rem;
      text-align: right;
    }
    .signup_btn {
      height: 50px;
      width: 20%;
      min-width: 260px;
      max-width: 280px;
      margin: 10px 0 10px 0;
      background-color: #3d3d3d;
      color: white;
      border: none;
      font-size: 1.125rem;
      border-radius: 5px;
    }

    .signup_link {
      color: #152dff;
    }
  </style>
  <body>
    <main class="signin_div">
      <form class="signin_form" id="change_pass_form" action="" method="POST">
        <!-- <img src="/camera.svg" alt="" height="{42}" width="{42}" /> -->

        <h1 class="h1">Change password</h1>
        <input
          class="input_text"
          type="password"
          name="password"
          id="password"
          placeholder="New password"
        />
        <input
          class="input_text"
          type="password"
          name="cpassword"
          id="cpassword"
          placeholder="Confirm password"
        />
        <input
          class="signup_btn"
          type="submit"
          value="Change password"
          name="login"
          id=""
        />
      </form>
    </main>

    <script>
      const pwdInput = document.querySelector("#password");
      const cPwdInput = document.querySelector("#cpassword");
      const changePassForm = document.querySelector("#change_pass_form");
      const alertText = document.querySelector(".p_notfound");

      changePassForm.addEventListener("submit", (e) => {
        if (pwdInput.value !== cPwdInput.value) {
          e.preventDefault();
          alertText.innerHTML = "Password not match!";
        } else if (pwdInput.value == "" || cPwdInput.value == "") {
          e.preventDefault();
          alertText.innerHTML = "Fill up inputs!";
        } else if (pwdInput.value.length < 8) {
          e.preventDefault();
          alertText.innerHTML = "Minimum password character is 8.";
        }
      });
    </script>
  </body>
</html>
